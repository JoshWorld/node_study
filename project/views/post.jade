doctype html
html(lang="en")
head
    style(type='text/css').

        table{
            margin: auto;
            width: 100%;
        }

        table,
        td,
        th{
            border : 1px solid #000;
        }

        table tr td{
            cursor: pointer;
        }

        table tr td,
        table tr th{
            width: 33%;
        }

body
    table
        tr
            th id
            th title
            th author
            th 수정
            th 삭제

        - for (var index in postList)
            tr
                td #{postList[index]['id']}
                td #{postList[index]['title']}
                td #{postList[index]['author']}

                td
                    a(href="/APIV0.2/post/edit/"+postList[index]['id'])
                        button 수정

                td
                    a(href="/APIV0.2/post/delete/"+postList[index]['id'])
                        button 삭제

    a(href="/APIV0.2/post/edit") 글쓰기 페이지로
